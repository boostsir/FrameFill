{
  "name": "image-background-tool",
  "version": "1.0.0",
  "description": "MVP Image Background Tool - Add backgrounds to images",
  "main": "dist/index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "node build.js",
    "serve": "python3 -m http.server 8000",
    "deploy": "./scripts/deploy.sh",
    "deploy:manual": "npm run build && echo 'Built successfully! Upload dist/index.html to your hosting service.'"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/main.js"
    ]
  }
}